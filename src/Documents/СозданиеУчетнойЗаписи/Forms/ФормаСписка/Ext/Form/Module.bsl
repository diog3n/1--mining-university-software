	Если ПоказатьВсе = Истина Тогда 
		ТекстОригинальногоЗапроса = Список.ТекстЗапроса;
		Список.ПроизвольныйЗапрос = Ложь;  
		Возврат;
	КонецЕсли;
	
	Список.ПроизвольныйЗапрос = Истина;
	Список.ТекстЗапроса = ТекстОригинальногоЗапроса;

